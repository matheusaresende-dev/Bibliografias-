author = {Fiona Chi and Wai Ching Wilson Au and Nelson Kee Fu Tsang and Heesup Han},
keywords = {Voice pitch, Age perception, Victimization perception, Moral emotions, The identifiable victim effect, Sound symbolism},
abstract = {Hotels are increasingly implementing pro-environmental policies to reduce the industry's harmful impact on the environment. However, effective communication of such policies is crucial to generate support and preserve guest satisfaction. Grounded in sound symbolism, this study examines how the pitch of a video voiceover influences the identifiable victim effect, ultimately shaping tourists' support for pro-environmental practices in hotels. Two experimental studies consistently demonstrate that a higher-pitch (vs. lower-pitch) voice leads participants to perceive the speaker as younger while simultaneously heightening their sense of victimization by environmental degradation. This voice-induced perception serves as a salient verbal cue that activates the identifiable victim effect through moral emotions. These findings extend our understanding of how voice pitch modulates both biological (age) and psychological (victimization) perceptions in video-based environmental communication. Practically, this study puts forward a way that tourism businesses can immediately and easily enhance the effectiveness of their pro-environmental messaging by adjusting the voice pitch.}
}
@article{YANG2026107016,
title = {Evaluating the degree of jointing in highly stressed rock masses: A simple wave velocity model and its application},
journal = {Tunnelling and Underground Space Technology},
volume = {167},
pages = {107016},
year = {2026},
issn = {0886-7798},
doi = {https://doi.org/10.1016/j.tust.2025.107016},
url = {https://www.sciencedirect.com/science/article/pii/S0886779825006546},
author = {Shuang Yang and Jianhui Deng and Zhaopeng Zhang and Hua Li},
keywords = {Rock masses, P-wave velocity, Stress dependency, Integrity evaluation, In situ stress},
abstract = {Seismic wave velocity measurements are extensively employed across various disciplines within geoscience, geoengineering, and geo-resource studies to gather insights into the geological characteristics of rock formations, such as the degree of jointing. However, the wave velocity often shows clear stress-induced “anisotropy” in the presence of non-hydrostatic stress field. A correction method to assess the degree of jointing considering P-wave velocity and the in-situ stress conditions is presented in this study. The theoretical relationship between P-wave velocity and stress anisotropy is proposed for porous rocks in principal stress space based on experimental evidence. The P-wave velocity in arbitrary direction under three-dimensional stress conditions is approximated based on a velocity-ellipsoid model. Thus, the degree of jointing or the rock mass integrity can be evaluated by comparing field-measured wave velocity of rock masses with that of laboratory-tested rock cores under uniaxial stress conditions, with the inclusion of a stress-dependent velocity correction. Based on the in-situ stress and wave velocity testing data from a traffic tunnel at the Jinping-II hydropower station, this proposed method for evaluating the degree of jointing is validated. Correlating the wave velocity of intact rock cores with in-situ stress conditions prevents anomalies where the ratio of the velocity of rock masses to that of rock cores exceeds 1. Some rock masses originally classified as Grade I were downgraded, necessitating different support measures.}
}
