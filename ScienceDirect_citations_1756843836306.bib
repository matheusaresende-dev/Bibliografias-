issn = {0921-8009},
doi = {https://doi.org/10.1016/j.ecolecon.2025.108774},
url = {https://www.sciencedirect.com/science/article/pii/S0921800925002575},
author = {Sarah Lange and Steffen Lange},
keywords = {Degrowth, Modeling, Policy evaluation, Scenarios, Transition, Climate neutrality},
abstract = {Climate neutrality is controversially discussed - in particular regarding its implications on socio-economic factors such as economic growth, employment and social acceptance. Several scenarios inform discussions and policies on how Germany can achieve greenhouse gas neutrality by 2045. We investigate 33 climate neutrality scenarios, using a document analysis We find that (1) 28 scenarios assume an absolute, sufficiently large, and time-lasting decoupling of economic growth and greenhouse gas emissions, despite empirical evidence that this is infeasible; (2) the scenarios focus on efficiency and consistency rather than sufficiency strategies; (3) they do not model the effects the measures proposed to achieve climate neutrality have on economic growth; (4) the scenarios do not calculate implications regarding the level and structure of employment, and (5) issues of social acceptance are mentioned but not integrated into the proposals made. Overall, the scenarios inadequately address the role of economic growth, which significantly affects the credibility and feasibility of their projections. Future scenarios therefore need to anticipate impacts in particular on economic growth but also on employment, and further socio-economic aspects in order to propose feasible and just pathways towards climate neutrality.}
}
@article{SHAN2026107057,
title = {Investigation of tunnel size effects on rockburst behaviors using electric potential monitoring under true triaxial loading conditions},
journal = {Tunnelling and Underground Space Technology},
volume = {167},
pages = {107057},
year = {2026},
issn = {0886-7798},
doi = {https://doi.org/10.1016/j.tust.2025.107057},
url = {https://www.sciencedirect.com/science/article/pii/S0886779825006959},
author = {Tiancheng Shan and Zhonghui Li and Haishan Jia and Enyuan Wang and Yue Niu and Xin Zhang and Yunpeng Zhang and Yan Li},
keywords = {Rockburst, Size effect, True triaxial condition, Fracture feature, Electric potential, Mechanism},
abstract = {Rockburst is a severe geological disaster that poses significant challenges to underground rock engineering. In this study, true triaxial loading tests were conducted on cubic sandstone samples with a hole under four different hole size conditions to investigate the influence of tunnel size effects on rockburst evolution and fracture behaviors. Through electric potential (EP) technology and particle flow numerical simulations, the failure evolution of tunnel sidewalls and rockburst modes of samples were revealed. The influence of tunnel sizes on rockburst mechanisms and EP generation were further examined by analyzing the multiple-scale fracture features and electrical parameters. Results show that an increase in hole diameters alters the stress concentration distribution and crack propagation modes, leading to larger deformation, smaller rockburst strength, and broader affected regions. Rockburst-induced fracturing leads to microstructure changes, resulting in charge accumulation and significant alterations in the electric field, which in turn trigger anomalous response features detected by EP technology. The EP imaging sensitively captures damage features of rockburst, aligning well with stress field evolution. Moreover, the intensity and abruptness of EPs become more pronounced with increasing hole diameters. Three mechanisms are proposed to explain these observations. (i) The load-bearing capacity of rock mass weakens, which promotes rockburst initiation while suppressing rockburst strength. (ii) The local stress concentrations and initial fracture locations are altered due to changes in crack propagation paths, affecting both the extent and severity of rockburst. (iii) The lower stress concentration and slower energy release occur, resulting in a more complex crack network. Based on well agreement between experimental observations and numerical simulations, the study summarizes three distinct rockburst failure modes under the effect of tunnel diameters. These findings enhance our understanding of rockburst disasters in real tunnel environments and provide potential engineering measures for rockburst prevention.}
}
